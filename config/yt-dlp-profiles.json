{
  "default": {
    "description": "Extract YouTube audio without any modification (preserves original quality and format)",
    "audioFormat": "best",
    "contentType": "audio/webm",
    "fileExtension": "webm",
    "postprocessorArgs": "",
    "additionalArgs": [
      "--no-playlist",
      "--format", "bestaudio[ext=webm]/bestaudio",
      "--extractor-args", "youtube:player_client=default,-tv",
      "--hls-prefer-ffmpeg",
      "--force-ipv4"
    ]
  },
  "opus": {
    "description": "Opus format optimized for speech with VoIP application mode",
    "audioFormat": "opus",
    "contentType": "audio/ogg",
    "fileExtension": "ogg",
    "postprocessorArgs": "ffmpeg:-threads 0 -c:a libopus -b:a 20k -vbr on -application voip -frame_duration 20 -ac 1 -ar 16000",
    "additionalArgs": [
      "--no-playlist",
      "--format", "bestaudio",
      "--extractor-args", "youtube:player_client=default,-tv",
      "--hls-prefer-ffmpeg",
      "--force-ipv4"
    ]
  },
  "mp3": {
    "description": "MP3 format optimized for speech content with maximum compatibility",
    "audioFormat": "mp3",
    "contentType": "audio/mpeg",
    "fileExtension": "mp3",
    "postprocessorArgs": "ffmpeg:-threads 0 -c:a libmp3lame -b:a 96k -ac 1 -ar 24000 -af silenceremove=start_periods=1:start_duration=1:start_threshold=-50dB:stop_periods=-1:stop_duration=1:stop_threshold=-50dB,loudnorm=I=-16:TP=-1.5:LRA=11",
    "additionalArgs": [
      "--no-playlist",
      "--format", "bestaudio/best",
      "--extractor-args", "youtube:player_client=default,-tv",
      "--hls-prefer-ffmpeg",
      "--force-ipv4"
    ]
  },
  "high_quality_opus": {
    "description": "High-quality Opus format for premium speech content",
    "audioFormat": "opus",
    "contentType": "audio/ogg",
    "fileExtension": "ogg",
    "postprocessorArgs": "ffmpeg:-threads 0 -c:a libopus -b:a 32k -vbr on -application voip -frame_duration 20 -ac 1 -ar 24000",
    "additionalArgs": [
      "--no-playlist",
      "--format", "bestaudio",
      "--extractor-args", "youtube:player_client=default,-tv",
      "--hls-prefer-ffmpeg",
      "--force-ipv4"
    ]
  },
  "aac": {
    "description": "AAC format optimized for speech with efficient compression",
    "audioFormat": "aac",
    "contentType": "audio/aac",
    "fileExtension": "aac",
    "postprocessorArgs": "ffmpeg:-threads 0 -c:a aac -b:a 32k -ac 1 -ar 22050 -profile:a aac_he",
    "additionalArgs": [
      "--no-playlist",
      "--format", "bestaudio",
      "--extractor-args", "youtube:player_client=default,-tv",
      "--hls-prefer-ffmpeg",
      "--force-ipv4"
    ]
  }
}
